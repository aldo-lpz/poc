@import 'nib'
@import '_base'

.container-fluid
	padding 0

.sidebar
	width 300px
	height 100%
	position fixed
	background #ccc
	padding 0px 15px 0px 15px

	.sidebar-title
		background #666
		color #fff
		border-bottom 2px solid #F0AD4E
		height 40px
		line-height 40px
		font-size 20px
		margin-left -15px
		margin-right -15px
		padding-left 15px
		font-weight 600
		box-shadow -2px 1px 5px rgba(0,0,0,0.5)

	.props-wrapper
		margin-top 10px

.editorArea
	margin-left 300px
	padding 10px
	
	.app
		margin-top 20px
		#canvas
			width 750px
			height 450px
			border 1px solid #000
			margin 0 auto

